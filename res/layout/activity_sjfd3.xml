<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/SjfdTitle"
        android:text="3.设置安全号码" />

    <TextView
        style="@style/SjfdText"
        android:text="SIM卡如果变化:\n报警短信就会发送给安全号码" />

    <EditText
        android:id="@+id/sjfd_safenumber_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入安全号码" />

    <Button
        android:id="@+id/sjfd_safenumber_bt"
        style="@style/MyTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/dg_btn_confirm_select"
        android:text="选择安全号码"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            style="@style/SjfdImage"
            android:src="@drawable/step_3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_online" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />
        </LinearLayout>

        <Button style="@style/SjfdNextButton" />

        <Button style="@style/SjfdRetreatButton" />
    </RelativeLayout>

</LinearLayout>